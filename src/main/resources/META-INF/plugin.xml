<idea-plugin require-restart="false"  allow-bundled-update="true">
  <id>com.hiberbee.intellij.hiberbee-theme</id>
  <vendor email="vlad@hiberbee.com" url="https://github.com/hiberbee">Hiberbee</vendor>
  <name>Hiberbee Theme</name>
  <version>@version@</version>
  <description>Monokai Pro &amp; MacOS inspired color themes, with bright colors &amp; dark mode, with common
    color code for all languages. See description &amp; screenshots on &lt;a href="https://github.com/Hiberbee/jetbrains-ide-theme"&gt;Github&lt;/a&gt;
  </description>
  <idea-version since-build="191" />
  <depends>com.intellij.modules.lang</depends>
  <extensions defaultExtensionNs="com.intellij">
    <bundledColorScheme path="/colors/Dark" />
    <themeProvider id="HiberbeeDark" path="/HiberbeeDark.theme.json"/>
  </extensions>
</idea-plugin>
